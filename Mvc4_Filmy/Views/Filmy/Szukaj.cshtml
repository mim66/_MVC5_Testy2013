@model IEnumerable<FilmyMvc.Models.Film>

@{
   ViewBag.Title = "Szukaj";
}

<h2>Szukaj</h2>

<p>@Html.ActionLink("Nowy film", "Nowy")</p>
@using (Html.BeginForm("Szukaj", "Filmy", FormMethod.Get)) {
   <p>
      Kategoria: @Html.DropDownList("_kategoria", "Wszystkie")  
      Tytuł: @Html.TextBox("_szukaj")<br />
      <input type="submit" value="Szukaj" />
   </p>
}
