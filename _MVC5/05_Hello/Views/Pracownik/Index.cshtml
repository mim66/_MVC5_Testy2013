@using _05_Hello.ViewModel
@model PracownikListViewModel
@{
    ViewBag.Title = "Pracownicy";
}

<h2>MyView</h2>

<div style="text-align:right"> Cześć, @Model.NazwaUsera 
   <a href="~/Autentykacja/Wyloguj">Wyloguj</a>
</div>
<hr />
<div>
   <a href="~/Pracownik/Dodaj">Dodaj pracownika</a>
   <table>
      <tr>
         <th>Nazwa</th>
         <th>Pensja</th>
      </tr>
      @foreach (PracownikViewModel item in @Model.Pracownicy) {
         <tr>
            <td>@item.Pracownik</td>
            <td style="background-color:@item.PensjaKolor">@item.Pensja</td>
         </tr>
      }
   </table>

</div>
